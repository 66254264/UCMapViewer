<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@color/light_gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_item_touch"
            android:orientation="vertical"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:padding="0.5dp">

                <ImageView
                    android:id="@+id/activity_main_gridview_item_img"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:minHeight="160dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@mipmap/empty_photo_large" />
            </RelativeLayout>

            <TextView
                android:id="@+id/activity_main_gridview_item_txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:padding="3dp"
                android:singleLine="true"
                android:text="测试资源标题"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/activity_main_gridview_item_txtRemark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:isScrollContainer="false"
                android:maxLines="2"
                android:minLines="2"
                android:paddingEnd="2dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="说明"
                android:textSize="10sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>